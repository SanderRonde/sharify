{
	"name": "sharify",
	"version": "0.0.01",
	"main": "app/server/app.js",
	"repository": "https://github.com/sanderronde/sharify",
	"author": "",
	"license": "MIT",
	"nodemonConfig": {
		"ext": "js",
		"exec": "node app/server/app.js --port 1234",
		"watch": [
			"app/server/"
		]
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"cookie-parser": "^1.4.4",
		"express": "^4.17.1",
		"express-ws": "^4.0.0",
		"fs-extra": "^8.1.0",
		"morgan": "^1.9.1",
		"node-fetch": "^2.6.0",
		"qrcode": "^1.4.4",
		"serve-static": "^1.14.1"
	},
	"devDependencies": {
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.2",
		"@types/express-ws": "^3.0.0",
		"@types/fs-extra": "^8.1.0",
		"@types/morgan": "^1.7.37",
		"@types/node-fetch": "^2.5.4",
		"@types/qrcode": "^1.3.4",
		"nodemon": "^2.0.2",
		"typescript": "^3.8.2"
	},
	"scripts": {
		"compile": "tsc -p app/client/tsconfig.json && tsc -p app/server/tsconfig.json",
		"watch": "tsc --build --watch tsconfig.json",
		"watch:client": "tsc -p app/client/tsconfig.json -w",
		"watch:server": "tsc -p app/server/tsconfig.json -w",
		"start": "nodemon",
		"dev": "nodemon --dev"
	}
}
